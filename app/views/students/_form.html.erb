<%= render 'shared/errors', obj: @student %>

<div class= "container">
    <div class= "row center sign-up-form">
        <div class= "col s12 m12 l12">
            <div class= "card-panel">
                <h3 class="header"><%= @student.new_record? ? "Sign up!" : "Edit Profile" %></h3>
                <div class="row">
                    <%= form_for(@student, html: {class: "col s12"}) do |f| %>
                        <div class= "row">
                            <div class= "input-field col s12">
                                <%= f.text_field :name, placeholder: "Enter Your Full Name", autofocus: true %>
                                <%= f.label :name, class: "active" %>
                            </div>
                        </div>

                        <div class= "row">
                            <div class= "input-field col s12">
                                <%= f.email_field :email, placeholder: "Enter Your Email Address" %>
                                <%= f.label :email, class: "active" %>
                            </div>
                        </div>

                        <div class= "row">
                            <div class= "input-field col s12">
                                <%= f.password_field :password, placeholder: "Enter the Password" %>
                                <%= f.label :password, class: "active" %>
                            </div>
                        </div>

                        <div class= "row">
                            <div class= "input-field col s12">
                                <%= f.password_field :password_confirmation, placeholder: "Confirm Your Password" %>
                                <%= f.label :password_confirmation, class: "active" %>
                            </div>
                        </div>

                        <div class="row">
                            <div class="file-field input-field col s6">
                                <div class="btn">
                                    <span>Upload Profile</span>
                                    <%= f.file_field :profile %>
                                </div>
                                <div class="file-path-wrapper">
                                    <input class="file-path validate" type="text" placeholder="Upload your profile picture">
                                </div>
                            </div>
                        </div>

                         <div class= "row">
                            <div class= "input-field col s12">
                                <%= f.button(@student.new_record? ? '<i class="material-icons right">arrow_forward</i>Sign up'.html_safe : '<i class="material-icons right">arrow_forward</i>Submit Changes'.html_safe, class: "btn waves-effect waves-light") %>
                            </div>
                        </div>
                    <% end %>
                </div>
            </div>
        </div>
    </div>
</div>