<div class= "row">
    <div class= "col s12">
        <h3 class= "center-align">My Courses</h3>
    </div>
</div>

<div class="row">
    <% if !(@mycourses.empty?) %>
        <% @mycourses.each do |course| %>
            <div class="col s6 m6">
                <div class="card blue-grey darken-1">
                    <div class="card-content white-text">
                        <span class="card-title"><%= course.short_name %>: <%= course.name %></span>
                        <p><%= course.description %></p>
                    </div>
                    <div class="card-action">
                        <%= link_to 'Info', course %>
                    </div>
                </div>
            </div>
        <% end %>
    <% else %>
        <%= link_to 'Enroll To the Courses', root_path, class: "btn waves-effect waves-light" %>
    <% end %>
</div>
