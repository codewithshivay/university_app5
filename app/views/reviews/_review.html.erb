<div class="col s12 m6">
    <div class="card blue-grey darken-1" style="margin-bottom: 10px;">
        <div class="card-content white-text" style="padding: 10px;">
            <div class="row valign-wrapper" style="margin-bottom: 0;">
                <% if review.student.profile.attached? %>
                    <div class="col s3">
                        <%= image_tag url_for(review.student.profile), class: "circle responsive-img", style: "width: 35px; height: 35px;" %>
                    </div>
                <% else %>
                    <div class="col s3">
                        <%= image_tag "default_user_icon.png", class: "circle responsive-img", style: "width: 35px; height: 35px;" %>
                    </div>
                <% end %>
                <div class="col s9">
                    <span class="card-title text-info" style="font-size: 1rem;"><%= review.student.name %></span>
                </div>
            </div>
            <p style="font-size: 0.9rem;"><%= review.content %></p>
        </div>
    </div>
</div>