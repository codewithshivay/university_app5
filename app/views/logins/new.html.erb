<div class= "container">
    <div class= "row center sign-up-form">
        <div class= "col s12 m12 l12">
            <div class= "card-panel">
                <h3 class="header">Log in</h3>
                <div class="row">
                    <%= form_for(:logins, html: {class: "col s12"}) do |f| %>
                        <div class= "row">
                            <div class= "input-field col s12">
                                <%= f.email_field :email, placeholder: "Enter Your Email Address", autofocus: true %>
                                <%= f.label :email %>
                            </div>
                        </div>

                        <div class= "row">
                            <div class= "input-field col s12">
                                <%= f.password_field :password, placeholder: "Enter Your Password" %>
                                <%= f.label :password, class: "active" %>
                            </div>
                        </div>

                         <div class= "row">
                            <div class= "input-field col s3">
                                <%= f.button '<i class="material-icons right">arrow_forward</i>Log in'.html_safe, class: "btn waves-effect waves-light left" %>
                            </div>
                            <%= link_to 'Sign up', new_student_path, class: "btn waves-effect waves-light right" %>
                        </div>
                    <% end %>
                    <%= link_to 'Forgot Password ?', new_password_path %>
                </div>
            </div>
        </div>
    </div>
</div>