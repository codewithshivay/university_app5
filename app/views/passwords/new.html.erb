<h1 class="center-align">Forgot Password</h1>

<%= form_with(url: passwords_path, method: :post, class: "col s12") do |form| %>
  <div class="row">
    <div class="input-field col s12 m8 offset-m2">
      <%= form.email_field :email, id: 'email', class: "validate" %>
      <%= form.label :email, 'Email', for: 'email' %>
    </div>
  </div>

  <div class="row center-align">
    <%= form.submit "Request OTP", class: "btn waves-effect waves-light" %>
  </div>
<% end %>
