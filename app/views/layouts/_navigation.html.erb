<header>
    <ul id="dropdown1" class="dropdown-content">
        <li><%= session_link %></li>
        <% if logged_in? %>
            <li><%= link_to 'View Profile', student_path(current_user) %></li>
        <% end %>
        <li class="divider"></li>
        <% if !(logged_in?) %>
            <li><%= link_to 'Sign up', new_student_path %></li>
        <% end %>
    </ul>
    <ul id="dropdown2" class="dropdown-content">
        <li><%= session_link %></li>
        <% if logged_in? %>
            <li><%= link_to 'View Profile', student_path(current_user) %></li>
        <% end %>
        <li class="divider"></li>
        <li><%= link_to 'Sign up', new_student_path %></li>
    </ul>
    <nav>
        <div class= "container">
            <div class="nav-wrapper">

                <%= link_to 'Tech University', root_path, class: "brand-logo right" %>
                
                <% if logged_in? %>
                <% if current_user.profile.attached? %>
                    <div class="profile-container right">
                        <%= link_to student_path(current_user) do %>
                            <%= image_tag url_for(current_user.profile), class: "circle responsive-img", style: "width: 50px; height: 50px;" %>
                        <% end %>
                    </div>
                <% else %>
                    <div class="profile-container right">
                        <%= link_to student_path(current_user) do %>
                            <%= image_tag "default_user_icon.png", class: "circle responsive-img", style: "width: 50px; height: 50px;" %>
                        <% end %>
                    </div>
                <% end %>
                <% end %>

                <a href="#" data-target="mobile-demo" class="sidenav-trigger"><i class="material-icons">menu</i></a>
                <ul id="nav-mobile" class="left hide-on-med-and-down">
                <li><%= link_to 'Courses', root_path %></li>
                <% if logged_in? %>
                   <li><%= link_to 'Students', students_path %></li>
                <% end %>
                <li><a class="dropdown-trigger" href="#!" data-target="dropdown1">Account<i class="material-icons right">arrow_drop_down</i></a></li>
                </ul>
                <ul class="sidenav" id="mobile-demo">
                <li><%= link_to 'Courses', root_path %></li>
                <% if logged_in? %>
                   <li><%= link_to 'Students', students_path %></li>
                <% end %>
                <li><a class="dropdown-trigger" href="#!" data-target="dropdown2">Account<i class="material-icons right">arrow_drop_down</i></a></li>
                </ul>
            </div>
        </div>
    </nav>

    <% flash.each do |key, msg| %>
        <div class="container">
            <div class= "row sign-up-form">
                <div class= "col s12 m12 l12">
                    <div class= "card-panel red lighten-2" id="fade-out-target">
                        <span class="white text">
                            <%= msg %>
                        </span>
                    </div>
                </div>
            </div>
        </div>
    <% end %>

</header>